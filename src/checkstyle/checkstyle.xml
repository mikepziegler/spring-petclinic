<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- Charset configuration -->
    <property name="charset" value="UTF-8"/>

    <!-- File extensions to check -->
    <property name="fileExtensions" value="java, properties, xml"/>

    <!-- Suppress warnings -->
    <module name="SuppressWarningsFilter"/>

    <!-- Line length relaxed to 120 characters -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern"
                  value="^package.*|^import.*|href\\s*=\\s*&quot;[^&quot;]*&quot;|http://|https://|ftp://"/>
    </module>

    <!-- Relax Javadoc requirements -->
    <module name="JavadocMethod">
        <property name="scope" value="public"/>
        <property name="allowMissingParamTags" value="true"/>
        <property name="allowMissingReturnTag" value="true"/>
    </module>

    <!-- Allow empty blocks -->
    <module name="EmptyBlock">
        <property name="option" value="text"/>
    </module>

    <!-- Indentation rules -->
    <module name="Indentation">
        <property name="basicOffset" value="4"/>
        <property name="braceAdjustment" value="4"/>
        <property name="caseIndent" value="4"/>
        <property name="lineWrappingIndentation" value="8"/>
    </module>

    <!-- Allow single-line if/else/for/while statements -->
    <module name="NeedBraces">
        <property name="allowSingleLineStatement" value="true"/>
    </module>

    <!-- Suppress missing Javadoc for protected and private methods -->
    <module name="MissingJavadocMethod">
        <property name="scope" value="public"/>
        <property name="excludeScope" value="protected, private"/>
    </module>

    <!-- Allow method names with underscores (e.g., for test methods) -->
    <module name="MethodName">
        <property name="format" value="^[a-z][a-zA-Z0-9_]*$"/>
    </module>

</module>